<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yk.note">

    <application
        android:name="net.micode.notes.NoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name="net.micode.notes.activity.RegisterActivity" />
        <activity android:name="net.micode.notes.activity.LoginActivity" />
        <activity android:name="net.micode.notes.activity.helloActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.micode.notes.MarkdownMainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">

        </activity>
        <activity
            android:name="net.micode.notes.ui.note.NoteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="net.micode.notes.ui.search.SearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
    </application>

</manifest>