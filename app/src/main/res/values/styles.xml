    </style>

    <style name="md_title_4" parent="md_title">
        <item name="android:textSize">@dimen/md_title_4</item>
    </style>

    <style name="md_title_5" parent="md_title">
        <item name="android:textSize">@dimen/md_title_5</item>
    </style>

    <style name="md_title_6" parent="md_title">
        <item name="android:textSize">@dimen/md_title_6</item>
    </style>

    <style name="md_code">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>